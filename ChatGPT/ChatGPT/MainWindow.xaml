<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Collection" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Guess the Number -->
            <TextBlock Text="Guess the number between 1 and 100:" Margin="0,0,0,10"/>
            <TextBox x:Name="guessTextBox" Width="100" Margin="0,0,0,10"/>
            <Button Content="Submit Guess" Click="Button_Click"/>
            <TextBlock x:Name="resultText" Margin="0,10,0,20"/>

            <!-- Guess the Word -->
            <TextBlock Text="Guess the word:" Margin="0,20,0,10"/>
            <TextBox x:Name="wordGuessTextBox" Width="100" Margin="0,0,0,10"/>
            <Button Content="Submit Word Guess" Click="WordButton_Click"/>
            <TextBlock x:Name="wordResultText" Margin="0,10,0,20"/>

            <!-- Solve the Math Problem -->
            <TextBlock Text="Solve the math problem:" Margin="0,20,0,10"/>
            <TextBox x:Name="mathAnswerTextBox" Width="100" Margin="0,0,0,10"/>
            <Button Content="Submit Math Answer" Click="MathButton_Click"/>
            <TextBlock x:Name="mathResultText" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
