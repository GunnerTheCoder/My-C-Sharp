<Window x:Class="BattleGameApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battle Game" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Player Health: " x:Name="PlayerHealthLabel" FontSize="16" Grid.Row="0"/>
        <Label Content="Enemy Health: " x:Name="EnemyHealthLabel" FontSize="16" Grid.Row="1"/>

        <Button Content="Attack" Click="AttackButton_Click" FontSize="14" Grid.Row="2"/>
        <Button Content="Item" Click="ItemButton_Click" FontSize="14" Grid.Row="3"/>
        <Button Content="Act" Click="ActButton_Click" FontSize="14" Grid.Row="4"/>
        <Button Content="Spare" Click="SpareButton_Click" FontSize="14" Grid.Row="5"/>
        <Button Content="Quit" Click="QuitButton_Click" FontSize="14" Grid.Row="6"/>
    </Grid>
</Window>
